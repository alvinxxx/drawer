<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alvinlam.drawer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop"
            android:label="@string/stock_portfolio">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activity.AddCardActivity"
            android:label="@string/stock_detail"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.AddCardAddActivity"
            android:label="@string/add_stock"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.SearchResultStockActivity"
            android:label="@string/stock_detail"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.MyCardActivity"
            android:label="@string/my_card">
        </activity>
        <activity
            android:name=".activity.MyCardAddActivity"
            android:label="@string/my_card"
            android:parentActivityName=".activity.MyCardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MyCardActivity" />
        </activity>
        <activity
            android:name=".activity.ImageActivity"
            android:label="@string/image">
        </activity>
        <activity
            android:name=".activity.AccountActivity"
            android:label="@string/my_account">
        </activity>
        <activity
            android:name=".activity.SettingActivity"
            android:label="@string/action_settings">
        </activity>

        <provider
            android:name="com.example.alvinlam.drawer.data.StockContentProvider"
            android:authorities="com.example.alvinlam.drawer"
            android:exported="false"/>

        <!--This is required for immediate syncs -->
        <service
            android:name=".sync.ReminderIntentService"
            android:exported="false"/>
    </application>

</manifest>